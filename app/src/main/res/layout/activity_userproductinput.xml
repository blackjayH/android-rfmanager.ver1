<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerHeight="4dp"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="상품명 : " />

        <EditText
            android:id="@+id/title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint=" +add a product name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/amount2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="수량 : " />

        <EditText
            android:id="@+id/amount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="수량" />

        <TextView
            android:id="@+id/category2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="카테고리 : " />

        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="카테고리" />
    </LinearLayout>

    <TextView
        android:id="@+id/date3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="달력에서 유통기한을 선택해주세요" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:maxDate="12/31/2099"
            android:minDate="04/01/2013" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/enrollDate"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:hint="등록일" />

        <TextView
            android:id="@+id/date"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:hint="유통기한" />
    </LinearLayout>

    <TextView
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보관장소 선택해주세요" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:text="냉동실"
        />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:text="냉장실"
            />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:text="상온 보관"
            />

        <TextView
            android:id="@+id/position2"
            android:layout_width="125dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:id="@+id/textv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="기입사항을 입력해주세요" />

    <EditText
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="기입사항" />

    <Button
        android:id="@+id/addproduct"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="등록" />

</LinearLayout>
